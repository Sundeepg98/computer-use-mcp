{
  "name": "computer-use-mcp",
  "version": "1.0.0",
  "description": "MCP server providing computer use tools for Claude and other MCP clients",
  "main": "dist/index.js",
  "bin": {
    "computer-use-mcp": "./bin/computer-use-mcp.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "python3 src/mcp_server.py",
    "build": "tsc",
    "test": "python3 -m pytest tests/",
    "docker:build": "docker build -t computer-use-mcp .",
    "docker:run": "docker run -it --rm computer-use-mcp",
    "lint": "pylint src/",
    "format": "black src/ tests/"
  },
  "keywords": [
    "mcp",
    "computer-use",
    "automation",
    "visual-analysis",
    "screenshot",
    "click",
    "type",
    "claude"
  ],
  "author": "Computer Use MCP Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sundeepg98/computer-use-mcp.git"
  },
  "mcp": {
    "version": "2024-11-05",
    "tools": [
      "screenshot", "click", "type", "key", "scroll", "drag", "wait", "automate",
      "install_xserver", "start_xserver", "stop_xserver", "setup_wsl_xforwarding", "xserver_status", "test_display",
      "detect_windows_server", "get_server_info", "check_server_core", "check_rdp_session", "get_server_capabilities", "suggest_alternatives",
      "detect_vcxsrv", "start_vcxsrv", "get_vcxsrv_status", "test_x11_display", "get_vcxsrv_capabilities", "install_vcxsrv_guide",
      "get_platform_info", "get_recommended_methods", "check_display_available"
    ],
    "resources": [
      "platform-capabilities", "vcxsrv-install-guide", "windows-server-setup", "display-troubleshooting", "platform-defaults"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.8.0"
  }
}