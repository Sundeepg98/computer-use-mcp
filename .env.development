# Development Environment Configuration
# This file contains development-specific settings

# Environment Type
NODE_ENV=development
APP_ENV=development
DEBUG=true

# Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3000
MCP_SERVER_PROTOCOL=http
MCP_SERVER_TIMEOUT=60000
MCP_SERVER_MAX_RETRIES=5

# Security Configuration (Development Keys - DO NOT USE IN PRODUCTION)
API_KEY=dev-api-key-12345
SECRET_KEY=dev-secret-key-67890
JWT_SECRET=dev-jwt-secret-abcdef
ENCRYPTION_KEY=dev-encryption-key-ghijkl

# Authentication
AUTH_ENABLED=false
AUTH_PROVIDER=mock
OAUTH_CLIENT_ID=dev-client-id
OAUTH_CLIENT_SECRET=dev-client-secret
OAUTH_CALLBACK_URL=http://localhost:3000/auth/callback

# Database Configuration
DATABASE_URL=postgresql://dev_user:dev_pass@localhost:5432/computer_use_mcp_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=computer_use_mcp_dev
DATABASE_USER=dev_user
DATABASE_PASSWORD=dev_pass
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Display Configuration
DISPLAY=:0
XAUTHORITY=/tmp/.Xauthority
X11_UNIX_SOCKET=/tmp/.X11-unix
VCXSRV_PATH=C:\\Program Files\\VcXsrv\\vcxsrv.exe

# Platform-specific Settings
PLATFORM_OVERRIDE=
SCREENSHOT_METHOD=auto
INPUT_METHOD=auto
ENABLE_RDP_CAPTURE=false

# Performance Settings
CACHE_ENABLED=true
CACHE_TTL=300
MAX_SCREENSHOT_SIZE=20971520
COMPRESSION_ENABLED=false
COMPRESSION_QUALITY=100

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_OUTPUT=stdout
LOG_FILE_PATH=./logs/dev.log
LOG_ROTATION_ENABLED=false
LOG_MAX_SIZE=50MB
LOG_MAX_FILES=10

# Monitoring and Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true
OPENTELEMETRY_ENABLED=false
TRACING_ENABLED=true

# Error Handling
ERROR_REPORTING_ENABLED=true
SENTRY_DSN=
ERROR_SAMPLE_RATE=1.0
ERROR_INCLUDE_LOCALS=true

# Feature Flags
FEATURE_SELF_HEALING=true
FEATURE_AUTO_RESOLVER=true
FEATURE_INTELLIGENT_RETRY=true
FEATURE_ADVANCED_CACHING=true

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=10000
HEALTH_CHECK_TIMEOUT=5000

# Backup and Recovery
BACKUP_ENABLED=false
BACKUP_SCHEDULE=
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=./backups/dev

# External Services
VAULT_ENABLED=false
VAULT_URL=http://localhost:8200
VAULT_TOKEN=dev-token
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Development Tools
HOT_RELOAD=true
SOURCE_MAPS=true
MOCK_MODE=true

# Testing
TEST_MODE=false
TEST_TIMEOUT=10000
TEST_RETRIES=2