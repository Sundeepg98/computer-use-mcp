# Computer Use MCP Environment Configuration Template
# Copy this file to .env and customize for your environment
# DO NOT commit .env files to version control

# Environment Type
NODE_ENV=development
APP_ENV=development
DEBUG=false

# Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3000
MCP_SERVER_PROTOCOL=http
MCP_SERVER_TIMEOUT=30000
MCP_SERVER_MAX_RETRIES=3

# Security Configuration
# Generate secure keys: openssl rand -hex 32
API_KEY=your-api-key-here
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Authentication
AUTH_ENABLED=true
AUTH_PROVIDER=local
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_CALLBACK_URL=

# Database Configuration (if needed)
DATABASE_URL=
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=computer_use_mcp
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_SSL=false

# Redis Configuration (for caching/sessions)
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Display Configuration
DISPLAY=:0
XAUTHORITY=/tmp/.Xauthority
X11_UNIX_SOCKET=/tmp/.X11-unix
VCXSRV_PATH=C:\\Program Files\\VcXsrv\\vcxsrv.exe

# Platform-specific Settings
PLATFORM_OVERRIDE=
SCREENSHOT_METHOD=auto
INPUT_METHOD=auto
ENABLE_RDP_CAPTURE=false

# Performance Settings
CACHE_ENABLED=true
CACHE_TTL=3600
MAX_SCREENSHOT_SIZE=10485760
COMPRESSION_ENABLED=true
COMPRESSION_QUALITY=85

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=./logs/app.log
LOG_ROTATION_ENABLED=true
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Monitoring and Metrics
METRICS_ENABLED=false
METRICS_PORT=9090
PROMETHEUS_ENABLED=false
OPENTELEMETRY_ENABLED=false
TRACING_ENABLED=false

# Error Handling
ERROR_REPORTING_ENABLED=true
SENTRY_DSN=
ERROR_SAMPLE_RATE=1.0
ERROR_INCLUDE_LOCALS=false

# Feature Flags
FEATURE_SELF_HEALING=true
FEATURE_AUTO_RESOLVER=true
FEATURE_INTELLIGENT_RETRY=true
FEATURE_ADVANCED_CACHING=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Backup and Recovery
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# External Services
VAULT_ENABLED=false
VAULT_URL=
VAULT_TOKEN=
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Development Tools
HOT_RELOAD=true
SOURCE_MAPS=true
MOCK_MODE=false

# Testing
TEST_MODE=false
TEST_TIMEOUT=5000
TEST_RETRIES=0